@page "/RegisterPage"
@model ADOPSE_2023.Models.UserController


<html>
<head>

    <title>Register Page</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/Register.css"/>
</head>
<body>
    <div class="container">


        <div class="Title">Register</div>
        <div class="User">
            Username:<br /><br />
            <input type="text" class="UT" placeholder="Type your username" />
        </div>
        <div class="Email">
            Email:<br /><br />
            <input type="text" class="Mail" placeholder="Type your Email" />
        </div>
        <div class="Pass">
            Password:<br /><br />
            <input type="password" class="PT" placeholder="Type your password" />
        </div>
        <div class="ConfPass">
            Confirm Password:<br /><br />
            <input type="password" class="PT" placeholder="Type your password" />
        </div>

        <input type="button" class="Reg" value="Create Account" onclick="location.href=''" />

        <div>
            <p class="Relog">Already have an account? @Html.ActionLink("Sign In", "LoginPage")</p>
        </div>

        <img src="~/images/reg.jpg"  class="Logo" alt="register" />


    </div>
</body>
</html>